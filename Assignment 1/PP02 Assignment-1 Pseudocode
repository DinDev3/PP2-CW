PSEUDOCODE for PP02 Assignment-1
GOLF CLUB

  BEGIN
1.SET input=0, name="", arrLength=0
2.SET playerRecords = <name,result>, playerResults=[]
3.DISPLAY "Welcome to Springfield Golf Club"
4.DISPLAY "Select Option:
            1) Enter Scores
            2) Find Golfer
            3) Display Scoreboard
            4) Exit Program"
5.PROMPT input
6.GET input
7.DO WHILE input!=4:
8.    IF input == number
9.        SET input == 0
10.       DO WHILE input<=0:
11.           PROMPT input
12.           GET input
13.           Sort playerResults in ascending order
14.           playerNames=[]

15.           SET i=0
16.           DO WHILE i<arrLength:
17.               p = playerResults[i]
                  SET t=0
                  DO WHILE t<arrLength;
                      (Map.Entry)
                      IF p==Value of entry
                          Key of entry in playerNames[i]
                      END IF
                      t=t+1
                  END DO
18.               playerRecords<p,> in playerNames
19.               i=i+1
              END DO

20.           IF input == 1:
21.             enterScores
22.           ELSE IF input == 2:
23.                   findGolfer
24.                ELSE IF input == 3:
25.                       displayScores
26.                     ELSE IF input ==4:
27.                             DISPLAY "We hope you enjoyed your Golf session at Springfield Golf Club.
                                          Looking forward to assist you in your next session.
                                          Exiting Program..."
28.                          ELSE:
29.                             DISPLAY Invalid input!!! Reenter..."
                             END IF
                        ELSE IF
                   END IF
              END IF
          END DO
30.     ELSE:
31.         DISPLAY "Only numeric characters are accepted. Please provide a valid input"
        END IF
  END DO
  END    
    
    
 
    
---------
enterScores

1.SET numOfGolfers=0
2.DO WHILE numOfGolfers=0 OR numOfGolfers != number:
3.    PROMPT numOfGolfers
4.    inputValidation
5.    GET numOfGolfers
  END DO

7.DO WHILE numOfGolfers>0:
8.    SET result = 0
9.    SET alter == ''

10.    PROMPT for name
11.    GET name

12.    IF name in playerRecords<,name>:

13.        DO WHILE name in playerRecords<,name>:
14.            PROMPT alter: "This Golfer has a previous entry! Do you wish to over-write this?"
15.            GET alter

16.            IF alter == 'yes' OR alter == 'y':
17.                SET result=0
18.                SET position = 0

20.                SET n=0
21.                DO WHILE n<arrLength:
22.                    IF playerNames[n] = name:
23.                        position = n
24.                    n = n+1
                   END DO

27.                playerResults[position] = 0

28.                DO WHILE result<18 OR result>108:
29.                    PROMPT result
30.                    inputValidation
31.                    GET result
                   END DO
32.                result, name in playerRecords<name,result>
33.                result in playerResults[i]

34.                numOfGolfers -= 1

35.            ELSE IF alter =='no' OR alter =='n':
36.                    DISPLAY "The new record for Golfer, "+name+" wasn't changed."
37.                 ELSE:
38.                    DISPLAY "Invalid input. Please try again."
                    END IF
               END IF
           END DO

39.    ELSE:
40.        SET result=0
41.        DO WHILE result<18 OR result>108:
42.            PROMPT result
43.            inputValidation
44.            GET result
           END DO
45.        arrLength = arrLength + 1
46.        numOfGolfers -= 1
47.        result, name in playerRecords<name,result>
48.        result in playerResults[i]
       END IF
   END DO
    
---------


findGolfer

1.PROMPT name
2.GET name
3.IF name in playerRecords:
4.   DISPLAY "Score: " + playerRecords<name, >
5.ELSE:
6.   DISPLAY "There is no recorded entry related to this name."
  END IF
    ---------

    
displayScores

1.SET index[i] = 0
2.DO WHILE i<arrLength:
3.    DISPLAY playerNames[i]"       "+ playerResults[i]
4.    i = i + 1
  END DO

    ---------


inputValidation

1.DO WHILE scanInput != INTEGER:
2.    DISPLAY "Only integer numbers are allowed! Please try again."
3.    CLEAR scanInput
  END DO